---
interface Props {
  title: string;
  image: string;
  url: string;
}

const { title, image, url } = Astro.props;
---

<a class="game-card" href={url} target="_blank">
  <div
    class="w-72 aspect-square border flex flex-col box-border rounded-2xl overflow-hidden cursor-pointer transition-all lg:hover:scale-105 ease-in-out hover:border-red-500"
  >
    <div class="overflow-hidden w-full h-full">
      <img class="w-full h-full object-cover" src={image} alt={title} />
    </div>
    <h6 class="text-center py-3 px-6 truncate">{title}</h6>
  </div>
</a>
