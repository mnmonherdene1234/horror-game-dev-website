---
interface Props {
  title: string;
  icon: string;
  url: string;
}

const { title, icon, url } = Astro.props;
---

<a href={url} title={title} target="_blank">
  <img
    class="w-10 bg-white p-1 rounded-full hover:bg-red-500 transition-all invert hover:invert-0"
    src={icon}
    alt={title}
  />
</a>
